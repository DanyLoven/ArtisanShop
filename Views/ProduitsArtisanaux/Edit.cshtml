@model ArtisanShop.Models.ProduitArtisanal

@{
    ViewData["Title"] = "Modifier un Produit";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Nom" class="control-label"></label>
            <input asp-for="Nom" class="form-control" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Prix" class="control-label"></label>
            <input asp-for="Prix" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Prix" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="DateDeCreation" class="control-label"></label>
            <input asp-for="DateDeCreation" class="form-control" type="date" />
            <span asp-validation-for="DateDeCreation" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Categorie" class="control-label"></label>
            <select asp-for="Categorie" class="form-control" asp-items="Html.GetEnumSelectList<ArtisanShop.Models.CategorieArtisanale>()"></select>
            <span asp-validation-for="Categorie" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Enregistrer" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Annuler</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
